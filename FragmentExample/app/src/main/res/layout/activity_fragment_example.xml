<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ebookfrenzy.fragmentexample.FragmentExampleActivity">

    <fragment
        android:id="@+id/toolbar_fragment"
        android:name="com.ebookfrenzy.fragmentexample.ToolbarFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/text_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/toolbar_fragment"/>

    <fragment
        android:id="@+id/text_fragment"
        android:name="com.ebookfrenzy.fragmentexample.TextFragment"
        android:layout_width="166dp"
        android:layout_height="46dp"
        android:layout_marginBottom="281dp"
        android:layout_marginEnd="156dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_fragment"
        tools:layout="@layout/text_fragment"/>

</android.support.constraint.ConstraintLayout>
